# freshshell.com
#
# See http://freshshell.com/readme for documentation.

fresh freshshell/fresh bin/fresh --bin=~/.bin/fresh

fresh shell/env.sh
fresh gitconfig --file
fresh zshrc --file
fresh vimrc --file

# aliases
fresh shell/aliases.sh

# antigen
fresh zsh-users/antigen antigen.zsh --file=~/.antigen.zsh

# vim
